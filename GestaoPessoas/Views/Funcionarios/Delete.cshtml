@model GestaoPessoas.Models.Funcionario

@{
    ViewData["Title"] = "Excluir Funcionário";
}

<h3>Deseja realmente excluir este funcionário?</h3>

<div>
    <h4>@Model.Nome</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Cargo</dt>
        <dd class="col-sm-10">@Model.Cargo</dd>

        <dt class="col-sm-2">Setor</dt>
        <dd class="col-sm-10">@Model.Setor?.Nome</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
