@{
    ViewData["Title"] = "Bem-vindo";
}

<style>
    .hero {
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #0d6efd, #6610f2);
        color: white;
        text-align: center;
        border-radius: 10px;
    }

        .hero h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .hero p {
            font-size: 1.3rem;
            margin-bottom: 30px;
        }

        .hero a {
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 8px;
            transition: 0.3s;
        }

            .hero a:hover {
                background-color: #fff;
                color: #0d6efd !important;
                transform: scale(1.05);
            }
</style>

<div class="hero container mt-5 shadow">
    <h1>Gestão de Pessoas</h1>
    <p>Sistema de acompanhamento de setores, metas e desempenho.</p>
    <a class="btn btn-light text-primary fw-bold" asp-controller="Relatorios" asp-action="Index">
        Entrar no Gestor de Pessoas
    </a>
</div>
