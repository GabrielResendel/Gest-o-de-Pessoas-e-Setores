@model GestaoPessoas.Models.Desempenho
@{
    ViewData["Title"] = "Registrar Desempenho";
}

<div class="container mt-4">
    <h2 class="mb-4"> Registrar Novo Desempenho</h2>

    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="FuncionarioId" class="form-label">Funcionário</label>
            <select asp-for="FuncionarioId" class="form-select" asp-items="ViewBag.FuncionarioId">
                <option value="">Selecione o Funcionário</option>
            </select>
            <span asp-validation-for="FuncionarioId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MetaId" class="form-label">Meta</label>
            <select asp-for="MetaId" class="form-select" asp-items="ViewBag.MetaId">
                <option value="">Selecione a Meta</option>
            </select>
            <span asp-validation-for="MetaId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PontuacaoObtida" class="form-label"></label>
            <input asp-for="PontuacaoObtida" class="form-control" placeholder="Digite a pontuação obtida" />
            <span asp-validation-for="PontuacaoObtida" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
