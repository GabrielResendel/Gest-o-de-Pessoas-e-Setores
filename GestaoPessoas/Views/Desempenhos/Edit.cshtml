@model GestaoPessoas.Models.Desempenho
@{
    ViewData["Title"] = "Editar Desempenho";
}

<div class="container mt-4">
    <h2 class="mb-4">Editar Desempenho</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="FuncionarioId" class="form-label">Funcionário</label>
            <select asp-for="FuncionarioId" class="form-select" asp-items="ViewBag.FuncionarioId"></select>
            <span asp-validation-for="FuncionarioId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MetaId" class="form-label">Meta</label>
            <select asp-for="MetaId" class="form-select" asp-items="ViewBag.MetaId"></select>
            <span asp-validation-for="MetaId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PontuacaoObtida" class="form-label"></label>
            <input asp-for="PontuacaoObtida" class="form-control" />
            <span asp-validation-for="PontuacaoObtida" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
