@model GestaoPessoas.Models.Desempenho

<h3>Deseja realmente excluir este desempenho?</h3>

<div>
    <h4>@Model.Funcionario?.Nome - @Model.Meta?.Descricao</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Pontuação</dt>
        <dd class="col-sm-10">@Model.PontuacaoObtida</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
