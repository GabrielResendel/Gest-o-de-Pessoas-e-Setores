@model GestaoPessoas.Models.Setor
@{
    ViewData["Title"] = "Novo Setor";
}

<div class="container mt-4">
    <h2 class="mb-4"> Cadastrar Novo Setor</h2>

    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do setor" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CapacidadeMaximaPessoas" class="form-label"></label>
            <input asp-for="CapacidadeMaximaPessoas" class="form-control" />
            <span asp-validation-for="CapacidadeMaximaPessoas" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

