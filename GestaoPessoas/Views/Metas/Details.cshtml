@model GestaoPessoas.Models.Meta
@{
    ViewData["Title"] = "Detalhes da Meta";
}

<div class="container mt-4">
    <h2 class="mb-4">📋 Detalhes da Meta</h2>

    <dl class="row">
        <dt class="col-sm-3">Descrição</dt>
        <dd class="col-sm-9">@Model.Descricao</dd>

        <dt class="col-sm-3">Pontuação Máxima</dt>
        <dd class="col-sm-9">@Model.PontuacaoMaxima</dd>

        <dt class="col-sm-3">Setor</dt>
        <dd class="col-sm-9">@Model.Setor?.Nome</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
