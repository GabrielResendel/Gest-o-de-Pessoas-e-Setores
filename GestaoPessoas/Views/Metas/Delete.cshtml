@model GestaoPessoas.Models.Meta

@{
    ViewData["Title"] = "Excluir Meta";
}

<h3>Deseja realmente excluir esta meta?</h3>

<div>
    <h4>@Model.Descricao</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Pontuação Máxima</dt>
        <dd class="col-sm-10">@Model.PontuacaoMaxima</dd>

        <dt class="col-sm-2">Setor</dt>
        <dd class="col-sm-10">@Model.Setor?.Nome</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
